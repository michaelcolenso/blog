<div class="min-h-screen">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 pb-32">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-extrabold text-white mb-6">
          One Link.<br>Infinite Possibilities.
        </h1>
        <p class="text-xl md:text-2xl text-indigo-100 mb-8 max-w-3xl mx-auto">
          Share all your content, products, and services with a single beautiful link. Perfect for Instagram, TikTok, YouTube, and more.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to "Start Free Trial", new_user_registration_path, class: "bg-white text-indigo-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-50 transition shadow-lg" %>
          <a href="#pricing" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-indigo-600 transition">
            View Pricing
          </a>
        </div>
        <p class="text-indigo-100 mt-4">Free forever. No credit card required.</p>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-24 mb-24">
    <div class="grid md:grid-cols-3 gap-8">
      <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="bg-indigo-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2">Lightning Fast</h3>
        <p class="text-gray-600">Create your link-in-bio page in under 60 seconds. No technical skills required.</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="bg-purple-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2">Fully Customizable</h3>
        <p class="text-gray-600">Choose from beautiful themes, add your branding, and make it uniquely yours.</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="bg-pink-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2">Powerful Analytics</h3>
        <p class="text-gray-600">Track every click and view with detailed analytics to understand your audience.</p>
      </div>
    </div>
  </div>

  <!-- Pricing Section -->
  <div id="pricing" class="bg-gray-100 py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-extrabold text-gray-900 mb-4">Simple, Transparent Pricing</h2>
        <p class="text-xl text-gray-600">Start free, upgrade when you're ready</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Free Plan -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <h3 class="text-2xl font-bold mb-2">Free</h3>
          <div class="mb-4">
            <span class="text-4xl font-extrabold">$0</span>
            <span class="text-gray-600">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Unlimited links</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Basic analytics</span>
            </li>
          </ul>
          <%= link_to "Get Started", new_user_registration_path, class: "block w-full bg-gray-200 text-gray-800 text-center px-6 py-3 rounded-lg font-semibold hover:bg-gray-300 transition" %>
        </div>

        <!-- Pro Plan -->
        <div class="bg-white rounded-xl shadow-xl p-8 border-2 border-indigo-600 transform scale-105">
          <div class="bg-indigo-600 text-white px-3 py-1 rounded-full text-sm font-semibold inline-block mb-4">Most Popular</div>
          <h3 class="text-2xl font-bold mb-2">Pro</h3>
          <div class="mb-4">
            <span class="text-4xl font-extrabold">$9</span>
            <span class="text-gray-600">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Everything in Free</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Custom domain</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Remove branding</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Custom themes</span>
            </li>
          </ul>
          <%= link_to "Start Free Trial", new_user_registration_path, class: "block w-full bg-indigo-600 text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition" %>
        </div>

        <!-- Business Plan -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <h3 class="text-2xl font-bold mb-2">Business</h3>
          <div class="mb-4">
            <span class="text-4xl font-extrabold">$19</span>
            <span class="text-gray-600">/month</span>
          </div>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Everything in Pro</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Team features</span>
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2">✓</span>
              <span>Advanced analytics</span>
            </li>
          </ul>
          <%= link_to "Start Free Trial", new_user_registration_path, class: "block w-full bg-gray-200 text-gray-800 text-center px-6 py-3 rounded-lg font-semibold hover:bg-gray-300 transition" %>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-indigo-600 py-16">
    <div class="max-w-4xl mx-auto text-center px-4">
      <h2 class="text-3xl md:text-4xl font-extrabold text-white mb-4">
        Ready to grow your audience?
      </h2>
      <p class="text-xl text-indigo-100 mb-8">
        Join thousands of creators using LinkHub
      </p>
      <%= link_to "Start Free - No Credit Card Required", new_user_registration_path, class: "bg-white text-indigo-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-50 transition inline-block shadow-lg" %>
    </div>
  </div>
</div>
